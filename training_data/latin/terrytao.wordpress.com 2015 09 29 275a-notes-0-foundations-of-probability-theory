PDRTJS_settings_132742_comm_468589={"id":132742,"unique_id":"wp-comment-468589","title":"%26%23091%3B%26%238230%3B%26%23093%3B%20variables%29%20%20that%20do%20depend%20%28in%20some%20measurable%20fashion%29%20on%20the%20state%20.%20%28As%20discussed%20in%20this%20previous%20post%2C%20it%20is%20often%20helpful%20to%20adopt%20a%20perspective%20that%20suppresses%20the%20sample%20space%20%20...","permalink":"https:\/\/terrytao.wordpress.com\/2015\/09\/29\/275a-notes-0-foundations-of-probability-theory\/#comment-468589","item_id":"_comm_468589"};
