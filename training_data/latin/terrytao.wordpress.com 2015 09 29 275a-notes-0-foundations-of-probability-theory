PDRTJS_settings_132742_comm_474356={"id":132742,"unique_id":"wp-comment-474356","title":"Similarly%20in%20Corollary%2031.%20I%20think%20what%20you%20really%20want%20to%20say%20is%20%26quot%3Bconstruction%20of%20random%20variables%2Fvectors%20with%20the%20given%20distribution%20function%20%24latex%20F%24%26quot%3B%3F...","permalink":"https:\/\/terrytao.wordpress.com\/2015\/09\/29\/275a-notes-0-foundations-of-probability-theory\/#comment-474356","item_id":"_comm_474356"};
