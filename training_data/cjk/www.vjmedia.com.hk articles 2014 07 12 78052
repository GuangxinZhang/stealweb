	(function($) {
		function subMenuClick(el){
			jQuery('#sub-title-span').css('display', 'block');
			jQuery('#sub-title-span').text(jQuery(this).siblings('.menu-link').text());
			jQuery('#sub-title-span').attr('data-target-id', jQuery(this).parent().attr('id'));

			var tmp = jQuery(this).siblings('.sub-menu').clone();
			tmp.css('display', 'block');
			jQuery('#submenu-area').empty();
			tmp.appendTo('#submenu-area');
			jQuery('.menu').hide();
			jQuery('#submenu-area .menu-item-has-children > a.menu-button').click(subMenuClick);
			jQuery('.snap-drawer').scrollTop(0);
		}

		jQuery(document).ready(function() {

	    	jQuery(".menu-item-has-children.menu-item-depth-0 > a.menu-button").click(function(){
	    		jQuery('#sub-title').css('display', 'block');
	    		jQuery('#sub-title').show();
				jQuery('#sub-title-span').text(jQuery(this).siblings('.menu-link').text());
				var tmp = jQuery(this).siblings('.sub-menu').clone();
				tmp.css('display', 'block');
				tmp.appendTo('#submenu-area');
				jQuery('.menu').hide();
				jQuery('#submenu-area .menu-item-has-children > a.menu-button').click(subMenuClick);
				jQuery('.snap-drawer').scrollTop(0);
	    	});


	    	jQuery('#sub-title').click(function(){
				if (jQuery(this).siblings('#submenu-area').children(':first-child').attr('depth-data') == '1'){
					jQuery('#submenu-area').empty();
					jQuery('#sub-title').hide();
					jQuery('.menu').show();
				}else{
					var target_id = jQuery('#submenu-area').children().find('.menu-item').first().attr('id');
					jQuery('#submenu-area').empty();
					var tmp =  jQuery('#'+target_id).parent().parent().parent().clone();
					jQuery('#sub-title-span').text(jQuery('#'+target_id).parent().parent().parent().siblings('.menu-link').text());
					tmp.css('display', 'block');
					tmp.appendTo('#submenu-area');
					jQuery('#submenu-area .menu-item-has-children > a.menu-button').click(subMenuClick);
				}
				jQuery('.snap-drawer').scrollTop(0);
	    	});

			var snapper = new Snap({  element: document.getElementById('mainWrapper'), /*disable: 'right',*/  touchToDrag: false});

			/* Get reference to toggle button, the html element with ID "open-left" */
            jQuery('body').delegate('a#show-navobile', 'click', function(){
				if( snapper.state().state=="left" ){
					snapper.close();
				} else {
					snapper.open('left');
				}
			});

            jQuery('body').delegate('a#show-navobile-right', 'click', function(){
				if( snapper.state().state=="right" ){
					snapper.close();
				} else {
					snapper.open('right');
				}
			});

            if (jQuery(window).width() <= 640){
            	//try to remove the onlcick redirect
        		jQuery('#header').click(function(){});
        		jQuery('#header').attr('onclick','');
            }
		});
	})(jQuery);
